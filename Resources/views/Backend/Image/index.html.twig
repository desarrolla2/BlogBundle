{% extends "BlogBundle::backend.html.twig" %}

{% block content %}
{% include 'BlogBundle:Backend/Image:index.filter.html.twig' with {'filterForm': filterForm } %}
<div class="span12">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Created / Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in pagination %}
            <tr>
                <td>{{ entity.file }}</td>
                <td>{{ entity.createdAt|date('Y-m-d') }} / {{ entity.updatedAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ upload_url }}/{{ entity.file }}" >view</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div><a class="btn " href="{{ url('_blog_backend_image_new') }}">new entry</a></div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
