<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>{{ item.name }}</td>
            <td>
                <a class="bnt btn-mini" href="{{ url('_blog_back_post_edit', { 'id': item.id }) }}" title="edit"> <i class="icon-edit"></i> </a>
                <a class="bnt btn-mini" href="{{ url('_blog_back_post_preview', { 'id': item.id }) }}" title="preview" target="_blank"> <i class="icon-eye-open"></i> </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td>No hay elementos</td>
            <td></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
